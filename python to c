#include<stdio.h>

int main()
{
    int n,i;
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        int m,j=0,sum=0;
        char ch;
        while(1)
        {
            scanf("%d%c",&m,&ch);
            sum+=m;
            j++;
            if(ch=='\n'||ch=='\r')
            break;
        }
        printf("%d %d\n",j,sum);
    }
}
